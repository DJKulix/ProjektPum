<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/btnGroup1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:textColor="@color/white"
            app:cornerRadius="0dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:visibility="invisible"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addHundreds"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:onClick="addHundredDigits"
            android:text="+"
            android:textColor="@color/white"
            app:cornerRadius="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addDecimals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:text="+"
            android:textColor="@color/white"
            app:cornerRadius="0dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addUnits"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:text="+"
            android:textColor="@color/white"
            app:cornerRadius="0dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:textColor="@color/white"
            app:cornerRadius="0dp"
            android:visibility="invisible"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnGroup2"
        android:layout_below="@id/btnGroup1"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/decStep"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:text="@string/decStep2"
            android:textColor="@color/white"
            app:cornerRadius="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHundreds"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:clickable="false"
            android:text="@string/textHundreds"
            android:textColor="@color/white"
            app:cornerRadius="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDecimals"
            android:layout_width="0dp"
            android:clickable="false"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:text="@string/textDec"
            android:textColor="@color/white"
            app:cornerRadius="0dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUnits"
            android:clickable="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:text="@string/textUnits"
            android:textColor="@color/white"
            app:cornerRadius="0dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addStep"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:text="@string/addStep2"
            android:textColor="@color/white"
            app:cornerRadius="0dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnGroup3"
        android:layout_below="@id/btnGroup2"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:visibility="invisible"
            android:textColor="@color/white"
            app:cornerRadius="0dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/decHundreds"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:text="-"
            android:textColor="@color/white"
            app:cornerRadius="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/decDecimals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:text="-"
            android:textColor="@color/white"
            app:cornerRadius="0dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/decUnits"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:text="-"
            android:textColor="@color/white"
            app:cornerRadius="0dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:visibility="invisible"
            android:textColor="@color/white"
            app:cornerRadius="0dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"/>

    </LinearLayout>

    <Space
        android:id="@+id/space2"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/btnGroup3" />

    <LinearLayout
        android:id="@+id/stepChangeLayout"
        android:layout_width="match_parent"
        android:layout_below="@id/space2"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="4">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/stepTextInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Podaj wartość skoku"
                android:inputType="numberSigned|numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/changeStepButton"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Zmień"
            app:cornerRadius="0dp" />
    </LinearLayout>

    <Space
        android:id="@+id/space1"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_below="@id/stepChangeLayout" />

    <TableLayout

        android:id="@+id/switchTL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/space1"
        android:layout_marginTop="75dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="9">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="3" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="4" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="5" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="6" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="7" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="8" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="9" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="9">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:maxWidth="5dp"
                android:onClick="calculateAddr"
                android:paddingEnd="-5dp"
                android:rotation="270"
                android:scaleX="1.5" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:maxWidth="5dp"
                android:paddingEnd="-5dp"
                android:onClick="calculateAddr"
                android:rotation="270"
                android:scaleX="1.5" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:maxWidth="5dp"
                android:paddingEnd="-5dp"
                android:onClick="calculateAddr"
                android:rotation="270"
                android:scaleX="1.5" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch4"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:maxWidth="5dp"
                android:paddingEnd="-5dp"
                android:rotation="270"
                android:onClick="calculateAddr"
                android:scaleX="1.5" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch5"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:maxWidth="5dp"
                android:onClick="calculateAddr"
                android:paddingEnd="-5dp"
                android:rotation="270"
                android:scaleX="1.5" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch6"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:maxWidth="5dp"
                android:onClick="calculateAddr"
                android:paddingEnd="-5dp"
                android:rotation="270"
                android:scaleX="1.5" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch7"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:maxWidth="5dp"
                android:paddingEnd="-5dp"
                android:onClick="calculateAddr"
                android:rotation="270"
                android:scaleX="1.5" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch8"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:maxWidth="5dp"
                android:paddingEnd="-5dp"
                android:rotation="270"
                android:onClick="calculateAddr"
                android:scaleX="1.5" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch9"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:maxWidth="5dp"
                android:paddingEnd="-5dp"
                android:onClick="calculateAddr"
                android:rotation="270"
                android:scaleX="1.5" />
        </TableRow>

        <TableRow
            android:id="@+id/tr3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="9">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="9" />

        </TableRow>


    </TableLayout>

    <LinearLayout
        android:id="@+id/rotationBtnsLL"
        android:layout_above="@id/bottom_navigation"
        android:layout_below="@id/switchTL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/rotateUpDownBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Góra/dół"
            app:cornerRadius="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/rotateLeftRightBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Lewo/Prawo"
            app:cornerRadius="0dp" />
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/bottomNav"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation" />
</RelativeLayout>